{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "OWID variable metadata",
    "description": "Metadata about an individualvariable or indicator.",
    "type":"object",
    "required": ["slug"],
    "properties": {
        "slug": {"type": "string", "pattern": "^[a-z0-9_]+$"},
        "title": {"type":"string"},
        "description": {"type": "string"}
    },
    "additionalProperties": false
}